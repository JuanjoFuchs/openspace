<%= form_for(@session) do |f| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %><%= f.text_field :title, :placeholder => 'Ingresa el título de la sesión' %>
  <%= f.label :proposed_by %><%= f.text_field :proposed_by %>
  
  <fieldset data-role="controlgroup" data-type="horizontal">
    <%= f.label :session_type %><%= f.select(:session_type, Session::SESSION_TYPES) %>
  </fieldset>  

  <%= f.label :description %><%= f.text_area :description %>
    
  <%= link_to 'Cancelar', :back, 'data-role'=>'button', 'data-inline'=>'true' %>
  <%= f.submit 'Proponer sesión', 'data-inline'=>'true', 'data-theme'=>'b' %>
<% end %>
