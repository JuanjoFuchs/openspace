<%= content_for :header do %>
  <%= link_to "Inicio", root_path, 'data-icon'=> 'home' %>
  <h1>Sesiones propuestas</h1>
  <%= link_to "Proponer", new_session_path, 'data-icon'=> 'plus' if can? :create, Session %>
<% end %>

<% if @sessions.empty? %>
  <%= link_to "No hay sesiones, puedes proponer una sesiÃ³n", new_session_path, 'data-role'=> 'button', 'data-theme'=>'b' if current_user %>
<% else %>
  <ul data-role="listview" data-filter="true">
